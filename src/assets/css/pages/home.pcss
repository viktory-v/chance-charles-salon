      .slick-dots {
        bottom: -23px;
      }
    }
  }

  @media (max-width: 400px) {
    .slick-dotted.slick-slider {
      margin-bottom: 70px;
    }

    .slider {
      .review::before {
        right: 14px;
      }

      .slick-dots {
        bottom: -24px;
      }
    }
  }
}

.section-prefooter {
  text-align: center;
  background: #0e0e0e;
  padding: 69px 15px 120px;
  overflow: hidden;

  .author {
    font-family: Lato;
    font-style: normal;
    font-weight: 300;
    font-size: 16px;
    line-height: 19px;
    letter-spacing: 0.05em;
    color: #fff;
    position: relative;

    &::before {
      content: "";
      width: 1px;
      height: 128px;
      position: absolute;
      top: 41px;
      left: 50%;
      background: #ecc9c5;
      opacity: 0.2;
    }
  }

  .quote {
    font-family: Italiana;
    font-style: normal;
    font-weight: normal;
    font-size: 70px;
    line-height: 90px;
    letter-spacing: 0.05em;
    color: #fff;
    margin: 22px auto 29px;
    max-width: 800px;
    position: relative;

    &::before {
      content: "";
      background: url("../../images/prefooter-ellipse.svg");
      position: absolute;
      top: calc(50% - 60px);
      left: calc(50% - 269px);
      width: 538px;
      height: 125px;
      background-repeat: no-repeat;
      background-position: center;
      pointer-events: none;
    }
  }

  .text {
    font-family: Lato;
    font-style: normal;
    font-weight: 300;
    font-size: 16px;
    line-height: 22px;
    letter-spacing: 0.05em;
    color: #fff;
    max-width: 640px;
    margin: 0 auto 32px;
    transform: translateX(6px);

    .license {
      font-weight: 700;
      margin-top: 15px;
    }
  }

  .soc-links {
    display: flex;
    justify-content: center;
    margin: 0;
    padding: 0;

    li {
      margin: 0 15px;
      width: 80px;
      height: 80px;
      background: #2b2b2b;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      list-style-type: none;
      position: relative;
      overflow: hidden;

      &::before {
        content: "";
        position: absolute;
        border-radius: 50%;
        left: 0;
        top: 0;
        width: 0;
        height: 0;
        transition: height 0.25s, width 0.25s;
      }

      &:hover::before {
        height: 100%;
        width: 100%;
      }

      &.insta::before {
        background: url("../../images/soc-insta-hover.png");
        background-position: center;
        background-repeat: no-repeat;
      }

      &.linkedin img {
        margin: -4px -4px 0 0;
      }

      &.linkedin::before {
        background: #0a66c2;
      }

      a {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
      }
    }
  }

  @media (max-width: 1240px) {
    padding: 22px 15px 71px;

    .quote {
      max-width: 670px;
      margin: 22px auto 28px;

      &::before {
        top: calc(50% - 105px);
        left: calc(50% - 265px);
      }
    }

    .author {
      margin-left: 22px;
    }

    .text {
      transform: translateX(2px);
    }
  }

  @media (max-width: 990px) {
    padding-bottom: 119px;
  }

  @media (max-width: 700px) {
    padding-bottom: 99px;
    padding-top: 10px;

    .author {
      margin: 0;

      &::before {
        top: 36px;
      }
    }

    .quote {
      font-style: normal;
      font-weight: normal;
      font-size: 40px;
      line-height: 50px;
      letter-spacing: 0.05em;
      max-width: 540px;
      margin: 71px auto 29px;

      &::before {
        background-image: url("../../images/prefooter-ellipse-mobile.svg");
        width: 330px;
        height: 125px;
        top: calc(50% - 63px);
        left: calc(50% - 165px);
      }
    }

    .text {
      max-width: none;
      letter-spacing: 1px;
      margin-bottom: 32px;

      .license {
        letter-spacing: 0.8px;
      }
    }
  }

  @media (max-width: 400px) {
    padding-bottom: 119px;
    padding-top: 40px;

    .quote {
      margin: 22px auto 29px;

      &::before {
        top: calc(50% - 63px);
        left: calc(50% - 165px);
      }
    }

    .text {
      transform: none;
      margin: 29px -4px;

      .license {
        letter-spacing: 0.8px;
      }
    }
  }
}
