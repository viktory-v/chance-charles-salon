    .images {
      grid-template-columns: 287px 287px 410px;

      li {
        padding: 12px;
      }

      &::before {
        top: 187px;
        left: calc(50% - 683px);
      }
    }

    .btn {
      margin-top: 42px;
      margin-left: -4px;
    }
  }

  @media (max-width: 990px) {
    .title {
      padding: 50px 0 42px;
      margin-left: 6px;
    }

    .btn {
      margin-top: 43px;
      margin-left: -3px;
    }

    .images {
      grid-template-columns: 201px 201px 285px;

      li {
        padding: 9px;
      }

      &::before {
        top: 46px;
        left: calc(50% - 707px);
      }
    }
  }

  @media (max-width: 700px) {
