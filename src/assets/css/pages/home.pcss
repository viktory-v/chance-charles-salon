.section-banner {
  height: 700px;
  text-align: center;
  background: url("../../images/section-banner.png");
  position: relative;
  padding: 257px 15px 0;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;

  .title {
    font-family: Italiana;
    font-style: normal;
    font-weight: normal;
    font-size: 70px;
    line-height: 42px;
    color: #fff;
    margin-bottom: 42px;
  }

  h2 {
    font-family: Lato;
    font-style: normal;
    font-weight: normal;
    font-size: 26px;
    line-height: 36px;
    color: #fff;
    opacity: 0.75;
    margin: 0;
  }

  .quote {
    background: rgba(14, 14, 14, 0.5);
    backdrop-filter: blur(5px);
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;

    .text {
      padding: 27px 0 31px;
      font-family: Lato;
      font-style: italic;
      font-weight: 300;
      font-size: 18px;
      line-height: 22px;
      color: #fff;
      letter-spacing: -0.49px;
    }

    .author {
      padding: 31px 0 29px;
      font-family: Heritage;
      font-style: normal;
      font-weight: bold;
      font-size: 18px;
      line-height: 18px;
      display: flex;
      align-items: center;
      color: #fff;
      position: relative;
      margin-bottom: 2px;
      white-space: nowrap;

      &::before {
        background: rgba(255, 255, 255, 0.2);
        width: 30px;
        height: 1px;
        content: "";
        margin: 0 32px;
      }

      &::after {
        content: "Coco Chanel";
        position: absolute;
        right: 2px;
        font-size: 20px;
        color: transparent;
        -webkit-text-fill-color: transparent;
        -webkit-text-stroke-width: 1px;
        -webkit-text-stroke-color: #fff;
        opacity: 0.3;
        letter-spacing: -1.3px;
      }
    }
  }

  @media (max-width: 1240px) {
    padding: 223px 15px;

    .title {
      line-height: 70px;
      max-width: 670px;
      margin: 0 auto 42px;
    }

    h2 {
      max-width: 670px;
      margin: 0 auto;
      letter-spacing: 0.2px;
    }
  }

  @media (max-width: 700px) {
    height: 576px;
    padding: 125px 15px 216px;

    .quote {
      flex-direction: column;

      .text {
        padding: 15px 0 14px;
        max-width: 320px;
        margin: 0 auto;
        letter-spacing: -0.3px;
      }

      .author {
        flex-direction: column;
        padding: 0 0 24px;

        &::before {
          margin: 0 0 14px;
        }

        &::after {
          top: 15px;
        }
      }
    }

    .title {
      font-style: normal;
      font-weight: normal;
      font-size: 44px;
      line-height: 46px;
      max-width: 470px;
      margin-bottom: 30px;
    }

    h2 {
      max-width: none;
      letter-spacing: 0.2px;
    }
  }

  @media (max-width: 400px) {
    padding-top: 84px;
  }
}

.section-diplomas {
  overflow: hidden;
  height: 240px;

  .popup {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 200;
    background-color: rgba(0, 0, 0, 0.8);
    justify-content: center;
    padding: 50px;
    align-items: center;
    display: none;

    &.show {
      display: flex;
    }

    img {
      max-width: 1000px;
      max-height: 1000px;
      object-fit: contain;
      display: block;
      filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.4));
      pointer-events: none;
      width: 100%;
      height: 100%;
    }
  }

  .diplom {
    position: relative;
    cursor: pointer;
    flex: 1;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }

    &::before {
      content: "";
      background: #000;
      opacity: 0.5;
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      transition: opacity 0.25s;
      height: 100%;
      pointer-events: none;
    }

    &:hover::before {
      opacity: 0;
    }

    &:hover {
      filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.4));
    }
  }

  @media (max-width: 990px) {
    .diplom {
      height: 240px;
    }

    .slick-active .diplom {
      filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.4));

      &::before {
        opacity: 0;
      }
    }

    .slick-track {
      height: 100%;
    }
  }
}

