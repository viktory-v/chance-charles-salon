.section-services {
  background: #0e0e0e;
  padding: 0 15px;

  .title {
    font-family: Italiana;
    font-style: normal;
    font-weight: normal;
    font-size: 80px;
    line-height: 90px;
    text-align: center;
    color: #fff;
    padding: 50px 0 35px;
    margin: 0;
  }

  .images {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    padding: 0;
    display: grid;
    grid-template-columns: 350px 350px 500px;
    position: relative;
    justify-content: center;

    &::before {
      content: "";
      background: url("../../images/services-ellipse.svg");
      position: absolute;
      top: 364px;
      left: calc(50% - 797px);
      width: 626px;
      height: 518px;
      background-repeat: no-repeat;
      background-position: center;
    }

    li {
      list-style-type: none;
      padding: 15px;
      position: relative;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }

      &:nth-child(1) {
        grid-column: 1;
        grid-row: 1;
      }

      &:nth-child(2) {
        grid-column: 2;
        grid-row: 1;
      }

      &:nth-child(3) {
        grid-column: 3;
        grid-row: 1 / span 2;
      }

      &:nth-child(4) {
        grid-column: 1 / span 2;
      }
